{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": [
      "es2018"
    ],
    "module": "commonjs",
    "target": "es2018",
    "baseUrl": "./src",
    "typeRoots": [
      "../node_modules/@types",
      "types"
    ],
    "outDir": "./build",

  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "../node_modules"
  ]
}